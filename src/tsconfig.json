{
  "angularCompilerOptions": {
    "genDir": "./../dist",
    "debug": true,
    "skipTemplateCodegen": true
  },
  "atom": {
    "rewriteTsconfig": false
  },
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom", "es2015"],
    "module": "commonjs",
    "outDir": "./../dist",
    "rootDir": ".",
    "removeComments": true,
    "target": "es5",
    "skipLibCheck": true
  }
}
