{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "lib": ["es6", "dom"],
    "experimentalDecorators": true,
    "declaration": true
  },
  "filesGlob": [
    "typings/index.d.ts",
    "index.ts",
    "src/**/*.ts",
    "!node_modules/**/*",
    "!dist/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "atom": {
    "rewriteTsconfig": false
  },
  "typeRoots": [
    "../node_modules/@types"
  ]
}
