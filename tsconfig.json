{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "outDir": "dist"
  },
  "filesGlob" : [
    "typings/index.d.ts",
    "index.ts",
    "src/**/*.ts",
    "!node_modules/**/*",
    "!dist/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compileOnSave": true,
  "atom": {
    "rewriteTsconfig": false
  }
}
