{
  "atom": {
    "rewriteTsconfig": false
  },
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "dist",
    "rootDir": "src",
    "removeComments": true,
    "target": "es5"
  },
  "include": [
    "./typings/index.d.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
